---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="w-full py-4 px-6 md:px-12 sticky top-0 z-50 bg-neutral-950/80 backdrop-blur-md border-b border-red-950/30">
	<nav class="max-w-7xl mx-auto flex items-center justify-between">

		<h2 class="text-xl font-bold tracking-widest uppercase">
			<a
				href="/"
				class="text-neutral-200 hover:text-red-950 transition-colors no-underline"
			>
				{SITE_TITLE}
			</a>
		</h2>

		<div class="flex gap-6 md:gap-8 text-sm font-medium">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>

		<div class="hidden md:flex gap-4 text-neutral-400 text-sm">
			<a href="https://hollowsense.com/index.html" target="_blank" class="hover:text-neutral-200 transition-colors">
				<i class="fa-solid fa-globe"></i>
				<span class="pl-1">Official Web Page</span>
			</a>
			<a href="https://github.com/hollowsense" target="_blank" class="hover:text-neutral-200 transition-colors">
				<i class="fa-brands fa-github"></i>
			</a>
		</div>
	</nav>
</header>
