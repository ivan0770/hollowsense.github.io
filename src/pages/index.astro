---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-slate-950 text-gray-200">
		<Header />

		<main class="flex flex-col items-center justify-center min-h-[80vh] px-4 text-center">
			
			<h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tighter">
				{SITE_TITLE}
			</h1>

			<p class="text-xl md:text-2xl text-gray-400 max-w-2xl mb-10 leading-relaxed">
				This is the official devlog from Hollow Sense
			</p>

			<div class="flex gap-4">
				<a
					href="/blog"
					class="bg-white text-slate-950 px-6 py-3 rounded-lg font-bold hover:bg-gray-200 transition duration-300"
				>
					Read the Blog
				</a>
				<a
					href="https://github.com/hollowsense"
					target="_blank"
					class="border border-gray-700 text-white px-6 py-3 rounded-lg font-bold hover:bg-gray-900 transition duration-300"
				>
					GitHub
				</a>
			</div>
		</main>

		<Footer />
	</body>
</html>
