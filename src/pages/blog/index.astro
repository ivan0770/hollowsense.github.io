---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

import MainLayout from '../../layouts/MainLayout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>

	<MainLayout>
		<main class="w-full max-w-7xl mx-auto px-4 py-12 grow">
			<h1 class="text-4xl font-bold text-neutral-200 mb-12 border-l-14 border-red-950 pl-4">
				Development Log
			</h1>

			<section>
				<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{
						posts.map((post) => (
							<li class="group">
								<a
									href={`/blog/${post.id}/`}
									class="block bg-neutral-950 rounded-xl overflow-hidden hover:shadow-2xl hover:shadow-neutral-950/20 transition duration-300 border border-neutral-800 hover:border-neutral-600 h-full"
								>
									<div class="aspect-video overflow-hidden">
										{post.data.heroImage && (
											<Image
												width={720}
												height={360}
												src={post.data.heroImage}
												alt=""
												class="w-full h-full object-cover group-hover:scale-105 transition duration-500"
											/>
										)}
									</div>

									<div class="p-6 flex flex-col grow">
										<p class="text-sm text-neutral-400 mb-2 font-mono">
											<FormattedDate date={post.data.pubDate} />
										</p>
										<h4 class="text-xl font-bold text-neutral-200 mb-2 group-hover:text-red-950 transition-colors">
											{post.data.title}
										</h4>
										<p class="text-neutral-400 text-sm line-clamp-3">
											{post.data.description}
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
	</MainLayout>
</html>
